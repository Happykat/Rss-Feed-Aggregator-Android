<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="150dp">

    <EditText
        android:id="@+id/add_feed_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp"
        android:background="@android:color/transparent"
        android:ems="10"
        android:gravity="center"
        android:hint="Entrez l'url du feed ici"
        android:inputType="textPersonName"
        android:textAlignment="center" />

    <Button
        android:id="@+id/add_feed_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/add_feed_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:background="@drawable/background_popup_button"
        android:text="Ajouter le feed"
        android:textColor="@color/white" />
</RelativeLayout>